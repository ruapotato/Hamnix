#!/usr/bin/env python3
import sys
import os

def main():
    try:
        if len(sys.argv) > 1:
            directory = sys.argv[1]
        else:
            directory = os.getcwd()
        
        if os.path.exists(directory):
            for filename in os.listdir(directory):
                print(filename)
        else:
            raise Exception(f"No such file or directory: {directory}")
    except Exception as e:
        print(f"Error: {str(e)}", file=sys.stderr)
        sys.exit(1)
    sys.exit(0)

if __name__ == "__main__":
    main()