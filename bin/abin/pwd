#!/usr/bin/python3
import sys
import os
import json

def update_shared_env():
    with open('/tmp/hamnix_env_update.json', 'w') as f:
        json.dump(dict(os.environ), f)

def main():
    try:
        if len(sys.argv) > 1:
            raise ValueError("This command does not accept any arguments.")
        
        print(os.getcwd())
        
        os.environ['PWD'] = os.getcwd()

    except Exception as e:
        print(f"Error: {str(e)}", file=sys.stderr)
        update_shared_env()
        return 1
    
    update_shared_env()
    return 0

if __name__ == "__main__":
    sys.exit(main())