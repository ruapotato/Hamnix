#!/usr/bin/python3
import sys
import os
import json

def update_shared_env():
    with open('/tmp/hamnix_env_update.json', 'w') as f:
        json.dump(dict(os.environ), f)

def main():
    try:
        if len(sys.argv) != 2:
            print("Usage: grep [pattern]")
            return 1

        pattern = sys.argv[1]
        for line in sys.stdin:
            if pattern in line:
                print(line, end='')

    except Exception as e:
        print(f"Error: {str(e)}", file=sys.stderr)
        update_shared_env()
        return 1

    update_shared_env()
    return 0

if __name__ == "__main__":
    sys.exit(main())