#!/usr/bin/python3
import sys
import os
import json
import shutil

def update_shared_env():
    with open('/tmp/hamnix_env_update.json', 'w') as f:
        json.dump(dict(os.environ), f)

def main():
    try:
        # If a file path is needed, it should be the first argument in sys.argv[1:]
        if len(sys.argv) > 1:
            file_path = sys.argv[1]
            if os.path.exists(file_path):
                if os.path.isfile(file_path):
                    os.remove(file_path)
                else:
                    shutil.rmtree(file_path)
            else:
                print(f"Error: File/directory '{file_path}' does not exist.", file=sys.stderr)
                return 1
        else:
            os.system('clear')

    except Exception as e:
        print(f"Error: {str(e)}", file=sys.stderr)
        return 1

    update_shared_env()
    return 0

if __name__ == "__main__":
    sys.exit(main())